<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btnSubject"
    android:layout_width="150dp"
    android:layout_height="170dp"
    android:layout_marginRight="29dp"
    android:background="@drawable/def_container_bg"
    android:clickable="true"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/imgContainer"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="46dp"
        android:layout_gravity="center"
        android:elevation="0dp"
        app:cardCornerRadius="5dp">
        <ImageView
            android:id="@+id/imgSubject"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/logo"
            android:background="@color/white" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgContainer"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:layout_marginBottom="5dp"
        android:paddingRight="10dp"
        android:text="Alphabets"
        android:textAlignment="center"
        android:textColor="@color/pri_font"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSubject"
        android:layout_marginBottom="19dp"
        android:text="Category"
        android:textAlignment="center"
        android:textColor="@color/sec_font" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/txtCategory"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:progressDrawable="@drawable/home_progress_bar" />

    <TextView
        android:id="@+id/txtProgress"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/txtCategory"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="0%"
        android:textColor="@color/progress_label"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>