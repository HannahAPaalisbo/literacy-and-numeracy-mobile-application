<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btnSubject"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="21dp"
    android:paddingLeft="26dp"
    android:paddingBottom="34dp"
    android:background="@color/def_bg"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="38.11dp"
        android:layout_height="38.11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitStart"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="34.89dp"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/txtSubject"
        android:layout_width="wrap_content"
        android:layout_height="38.11dp"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/imgBack"
        android:layout_marginTop="25dp"
        android:text="Subject"
        android:textSize="32sp"
        android:textAlignment="center"
        android:textColor="@color/pri_font"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPractice"
        android:layout_width="132dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/progress_main"
        android:textColor="@color/white"
        android:text="Practice"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/imgContainer"
        android:layout_width="231dp"
        android:layout_height="231dp"
        android:layout_below="@id/imgBack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:layout_marginRight="46dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/btnAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_audio" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtKalagan"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtFilipino"
        android:layout_toRightOf="@id/imgContainer"
        android:layout_marginRight="47dp"
        android:layout_marginBottom="20dp"
        android:text="Tagakaulo:"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/sec_font" />

    <TextView
        android:id="@+id/txtKalaganT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtFilipinoT"
        android:layout_toRightOf="@id/txtKalagan"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:text="Translation"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/pri_font" />

    <TextView
        android:id="@+id/txtFilipino"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtEnglish"
        android:layout_toRightOf="@id/imgContainer"
        android:layout_marginRight="47dp"
        android:layout_marginBottom="20dp"
        android:text="Filipino:"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/sec_font" />

    <TextView
        android:id="@+id/txtFilipinoT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtEnglishT"
        android:layout_toRightOf="@id/txtFilipino"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:text="Translation"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/pri_font" />

    <TextView
        android:id="@+id/txtEnglish"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgContainer"
        android:layout_marginRight="47dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="33dp"
        android:text="English:"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/sec_font" />

    <TextView
        android:id="@+id/txtEnglishT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtEnglish"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="33dp"
        android:text="Translation"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/pri_font" />

</RelativeLayout>
